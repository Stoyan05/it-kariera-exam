@model ReviewModel;

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Bar @Model.BarName</h4>
    <hr />
    @if(Model.Reviews.Count != 0)
    {
        foreach(var item in Model.Reviews)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.UserId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.UserId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.BarId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.BarId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.Text)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.Text)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(modelItem => item.Rating)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.Rating)
                </dd>
            </dl>
        }
    }
    else
    {
        <p>No reviews for this hotel.</p>
    }

</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { barId = Model.BarId, userId = Model.UserId }) |
    <a asp-action="Index" asp-controller="Bar" asp-for="UserId" value="@Model.UserId">Back to Bar Page</a>
</div>
